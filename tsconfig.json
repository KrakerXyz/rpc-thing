{
   "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "sourceMap": true,
      "removeComments": true,
      "esModuleInterop": true, //To stop jest from complaining
      "declaration": true,
      "declarationMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "importHelpers": true,
      "skipLibCheck": true,
      "types": [
         "jest"
      ],
      "paths": {
         "tslib": [
            "./node_modules/tslib/tslib.d.ts"
         ]
      },
      "strict": true,
      "noImplicitReturns": true,
      "noEmitOnError": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": true,
      "noPropertyAccessFromIndexSignature": true
   },
   "include": [
      "src/**/*.ts",
      "src/index.spec.ts"
   ],
   "exclude": [
      "src/**/*.spec.ts"
   ]
}