{
   "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "sourceMap": true,
      "removeComments": true,
      "esModuleInterop": true, //To stop jest from complaining
      "outDir": "dist",
      "skipLibCheck": true,
      "types": [
         "jest"
      ],
      "importHelpers": true,
      "paths": {
         "tslib": [
            "./node_modules/tslib/tslib.d.ts"
         ]
      },
      "strict": true,
      "noImplicitReturns": true,
      "noEmitOnError": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": true
   }
}